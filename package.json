{
    "name": "axm-examples",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "description": "Examples and published-package smoke tests for @axm-internal",
    "scripts": {
        "prepare": "lefthook install",
        "test": "bun test",
        "test:coverage": "bun test --coverage --coverage-reporter=lcov",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "check-types": "tsc --noEmit",
        "verify:readme-versions": "bun run src/scripts/verify-readme-versions.ts",
        "validate": "bun run lint && bun run check-types && bun run test"
    },
    "dependencies": {
        "@axm-internal/zod-helpers": "^0.1.0",
        "axios": "^1.13.2",
        "pino": "^10.1.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.11",
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@types/bun": "^1.3",
        "lefthook": "^2.0.15",
        "typescript": "^5"
    }
}
